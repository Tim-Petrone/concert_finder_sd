<!DOCTYPE html>
<html>
  <head>
    <title>ConcertFinderSd</title>
    <meta name="viewport" content="width=device-width">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'navbar', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'home', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'footer', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'about', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'appinfo', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'profile', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'update', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'events_list', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'signup', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Rubik:700', media: 'all', 'data-turbolinks-track': 'reload'%>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <%= react_component("Header") %>
        <div class="nav-button">
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        </div>
        <% else %>
        <%= react_component("SignedIn") %>
        <% end %>
    </header>
    <%= yield %>
    <%= react_component("Footer") %>
  </body>
</html>
